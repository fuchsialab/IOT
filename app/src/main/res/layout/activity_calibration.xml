<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".Calibration">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FF5722"
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:text="Calibration"
        android:layout_height="wrap_content">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">


        <LinearLayout
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center">

            <TextView
                android:id="@+id/txttemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Temperature Â°C (Max, Min):">

            </TextView>

            <EditText
                android:id="@+id/tempmax"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@color/white"
                android:hint="Max"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/tempmin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Min"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>
        </LinearLayout>


        <Button
            android:textColor="#000000"
            android:id="@+id/calibtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Calibrate">

        </Button>

        <LinearLayout
            android:layout_below="@+id/calibtemp"
            android:id="@+id/spo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtspo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="BPM Max + SpO2 Min:">

            </TextView>

            <EditText
                android:id="@+id/bpmmax"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@color/white"
                android:hint="BPM Max"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/spomin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="SpO2 Min"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>
        </LinearLayout>

        <Button
            android:textColor="#000000"
            android:id="@+id/calibspo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Calibrate">

        </Button>

        <LinearLayout
            android:id="@+id/hum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calibspo"
            android:layout_marginTop="20sp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Humidity % (Max, Min):">

            </TextView>

            <EditText
                android:id="@+id/hummax"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@color/white"
                android:hint="Max"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/hummin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Min"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>

        </LinearLayout>

        <Button
            android:textColor="#000000"
            android:id="@+id/calibhum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hum"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Calibrate">

        </Button>

        <LinearLayout
            android:id="@+id/gas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calibhum"
            android:layout_marginTop="20sp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Gas (Max, Min):">

            </TextView>

            <EditText
                android:id="@+id/gasmax"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@color/white"
                android:hint="Max"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/gasmin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Min"
                android:inputType="numberDecimal"
                android:textAlignment="center">

            </EditText>

        </LinearLayout>

        <Button
            android:textColor="#000000"
            android:id="@+id/calibgas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gas"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Calibrate">

        </Button>
    </RelativeLayout>

</RelativeLayout>